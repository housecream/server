<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>net.awired.housecream</groupId>
	<artifactId>housecream</artifactId>
	<name>Housecream</name>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>
	<url>http://housecream.awired.net</url>
	<description>The concrete domotic project</description>

	<parent>
		<groupId>net.awired.parent.parent-java</groupId>
		<artifactId>parent-java</artifactId>
		<version>1.13</version>
	</parent>

	<modules>
		<module>client</module>
		<module>server</module>
		<module>web</module>
	</modules>

	<properties>
		<sonar.jacoco.itReportPath>${jacoco.file.path}</sonar.jacoco.itReportPath>
		<cargo.jvm.args>-XX:MaxPermSize=512m -XX:+HeapDumpOnOutOfMemoryError
			-XX:HeapDumpPath=/tmp/</cargo.jvm.args>



		<bootstrap.version>1.0</bootstrap.version>
		<ajsl.version>0.5-SNAPSHOT</ajsl.version>

		<junit.version>4.8.2</junit.version>
		<mockito.version>1.9.0-rc1</mockito.version>
		<jetty.version>6.1.26</jetty.version>
		<spring.version>3.1.0.RELEASE</spring.version>
		<camel.version>2.9.0</camel.version>
		<cxf.version>2.5.1</cxf.version>
		<jacoco.version>0.5.5.201112152213</jacoco.version>
		<slf4j.version>1.6.4</slf4j.version>
	</properties>


	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>net.awired.housecream.client</groupId>
				<artifactId>housecream-client-common</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>net.awired.housecream.client</groupId>
				<artifactId>housecream-client-stub</artifactId>
				<type>war</type>
				<version>${project.version}</version>
			</dependency>




			<dependency>
				<groupId>net.awired.housecream.server</groupId>
				<artifactId>housecream-server-common</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>net.awired.housecream.server</groupId>
				<artifactId>housecream-server-core</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>net.awired.housecream.server</groupId>
				<artifactId>housecream-server-storage</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>net.awired.housecream.server</groupId>
				<artifactId>housecream-server-service</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>net.awired.housecream.server</groupId>
				<artifactId>housecream-server-cli</artifactId>
				<version>${project.version}</version>
			</dependency>


			<dependency>
				<groupId>net.awired.housecream.server</groupId>
				<artifactId>housecream-server-webapi</artifactId>
				<version>${project.version}</version>
				<type>war</type>
			</dependency>


		</dependencies>
	</dependencyManagement>


	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.apache.maven.plugins
										</groupId>
										<artifactId>
											maven-dependency-plugin
										</artifactId>
										<versionRange>
											[2.3,)
										</versionRange>
										<goals>
											<goal>copy-dependencies</goal>
											<goal>unpack</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>


	<profiles>
		<profile>
			<id>itCoverage</id>
			<properties>
				<jacoco.args>-javaagent:"${settings.localRepository}/org/jacoco/org.jacoco.agent/${jacoco.version}/org.jacoco.agent-${jacoco.version}-runtime.jar=destfile=${jacoco.file.path}"</jacoco.args>
			</properties>
			<dependencies>
				<dependency>
					<groupId>org.jacoco</groupId>
					<artifactId>org.jacoco.agent</artifactId>
					<version>0.5.5.201112152213</version>
					<classifier>runtime</classifier>
				</dependency>
			</dependencies>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-failsafe-plugin</artifactId>
						<version>2.11</version>
						<configuration>
							<argLine>${jacoco.args}</argLine>
						</configuration>
					</plugin>
					<plugin>
						<groupId>org.codehaus.cargo</groupId>
						<artifactId>cargo-maven2-plugin</artifactId>
						<version>1.1.4</version>
						<configuration>
							<configuration>
								<properties>
									<cargo.jvmargs>${jacoco.args} ${cargo.jvm.args}</cargo.jvmargs>
								</properties>
							</configuration>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>


