	<groupId>net.awired</groupId>
	<artifactId>acse</artifactId>
	<packaging>jar</packaging>
	<version>1.0-SNAPSHOT</version>
	<name>Awired Common Software Engine</name>
	<url>http://acse.awired.net</url>
	<description>This is a Common Software Engine</description>
	<inceptionYear>2008</inceptionYear>

	<parent>
		<groupId>net.awired</groupId>
