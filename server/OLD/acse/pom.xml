	</developers>

	<dependencies>
		<dependency>
			<groupId>net.awired</groupId>
			<artifactId>ajsl</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>net.awired</groupId>
			<artifactId>bootstrap</artifactId>
			<version>1.0-SNAPSHOT</version>
			<scope>compile</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-sources</id>
						<phase>verify</phase>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<!-- executable jar -->
			<plugin>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifestEntries>
							<Main-Class>net.awired.bootstrap.Bootstrap</Main-Class>
							<Real-Main>net.awired.acse.kernel.Kernel</Real-Main>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>

