<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<artifactId>hcs-it</artifactId>
	<packaging>jar</packaging>

	<parent>
		<groupId>net.awired.housecream.server</groupId>
		<artifactId>hcs</artifactId>
		<version>0.0.1-SNAPSHOT</version>
		<relativePath>../</relativePath>
	</parent>

	<dependencies>

		<dependency>
			<groupId>net.awired.housecream.server</groupId>
			<artifactId>hcs-common</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.cxf</groupId>
			<artifactId>cxf-rt-frontend-jaxrs</artifactId>
			<version>${cxf.version}</version>
		</dependency>

		<dependency>
			<groupId>net.awired.housecream.server</groupId>
			<artifactId>hcs-webapi</artifactId>
			<type>war</type>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>servlet-api</artifactId>
			<version>2.5</version>
		</dependency>


		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.8.2</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<testSourceDirectory>src/it/java</testSourceDirectory>
		<testResources>
			<testResource>
				<filtering>false</filtering>
				<directory>src/it/resources</directory>
			</testResource>
		</testResources>

		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-failsafe-plugin</artifactId>
				<configuration>
					<systemProperties>
						<property>
							<name>hcs.it.port</name>
							<value>34567</value>
						</property>
					</systemProperties>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>integration-test</goal>
							<goal>verify</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.11</version>
				<configuration>
					<excludes>
						<exclude>**/**IT.java</exclude>
					</excludes>
				</configuration>
			</plugin>


			<plugin>
				<groupId>org.codehaus.cargo</groupId>
				<artifactId>cargo-maven2-plugin</artifactId>
				<configuration>
					<container>
						<containerId>jetty8x</containerId>
						<type>embedded</type>
						<cargo.jvmargs>-XX:PermSize=512m -XX:MaxPermSize=1024m -Duser.timezone="GMT" -XX:+HeapDumpOnOutOfMemoryError -XX:HeapDumpPath=/tmp/</cargo.jvmargs>
					</container>
					<configuration>
						<properties>
							<cargo.servlet.port>34567</cargo.servlet.port>
							<cargo.logging>low</cargo.logging>
						</properties>
						<deployables>
							<deployable>
								<groupId>net.awired.housecream.server</groupId>
								<artifactId>hcs-webapi</artifactId>
								<type>war</type>
								<properties>
									<context>hcs</context>
								</properties>
							</deployable>
						</deployables>
					</configuration>
					<wait>false</wait>
				</configuration>
				<executions>
					<execution>
						<id>start-container</id>
						<phase>pre-integration-test</phase>
						<goals>
							<goal>start</goal>
						</goals>
					</execution>
					<execution>
						<id>stop-container</id>
						<phase>post-integration-test</phase>
						<goals>
							<goal>stop</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>


	<profiles>
		<profile>
			<id>itCoverage</id>
			<properties>
				<jacoco.file.path>${project.build.directory}/hcsJacoco.out</jacoco.file.path>
				<sonar.jacoco.itReportPath>${jacoco.file.path}</sonar.jacoco.itReportPath>
			</properties>
			<dependencies>
				<dependency>
					<groupId>org.jacoco</groupId>
					<artifactId>org.jacoco.agent</artifactId>
					<version>0.5.5.201112152213</version>
					<classifier>runtime</classifier>
				</dependency>
			</dependencies>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
						<version>1.7</version>
						<configuration>
							<exportAntProperties>true</exportAntProperties>
						</configuration>
						<executions>
							<execution>
								<id>find-jacoco-jar1</id>
								<phase>pre-integration-test</phase>
								<configuration>
									<target>
										<property name="jacoco.agent.path"
											value="${maven.dependency.org.jacoco.org.jacoco.agent.runtime.jar.path}" />
										<echo message="################ ${jacoco.agent.path}" />
									</target>
								</configuration>
								<goals>
									<goal>run</goal>
								</goals>
							</execution>
						</executions>
					</plugin>


					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-failsafe-plugin</artifactId>
						<configuration>
							<argLine>-javaagent:"${jacoco.agent.path}=destfile=${jacoco.file.path}"</argLine>
						</configuration>
					</plugin>
					<plugin>
						<groupId>org.codehaus.cargo</groupId>
						<artifactId>cargo-maven2-plugin</artifactId>
						<configuration>
							<configuration>
								<properties>
									<cargo.jvmargs>-javaagent:"${jacoco.agent.path}=destfile=${jacoco.file.path}" -XX:PermSize=512m -XX:MaxPermSize=1024m -XX:+HeapDumpOnOutOfMemoryError -XX:HeapDumpPath=/tmp/</cargo.jvmargs>
								</properties>
							</configuration>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>

	</profiles>
</project>

